  </servlet-mapping>
  
  <servlet>
  	<servlet-name>goods</servlet-name>
  	<servlet-class>controller.goods.GoodsFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>goods</servlet-name>
  	<url-pattern>*.goods</url-pattern>
  </servlet-mapping>
</web-app>